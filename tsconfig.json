{
  "compilerOptions": {
    "allowJs": false,
    "allowUnreachableCode": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitUseStrict": false,
    "outDir": "./lib",
    "pretty": true,
    "removeComments": true,
    "rootDir": "./src",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es6"
  }
}